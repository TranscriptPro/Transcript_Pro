# Server Configuration
PORT=3000
UPLOAD_PATH=./server/uploads
MAX_FILE_SIZE=10485760 # 10MB in bytes
WHISPER_OUTPUT_DIR=./server/transcriptions

# Security Settings
NODE_ENV=development # Change to 'production' in production environment
API_KEY_SECRET=your-api-key-secret # For securing API endpoints

# Logging Configuration
LOG_LEVEL=info # Options: error, warn, info, debug
ENABLE_REQUEST_LOGGING=true

# Email Configuration (for audit emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=mg.transcriptpro@gmail.com
EMAIL_PASS=your-app-password-here
EMAIL_FROM=mg.transcriptpro@gmail.com
DEFAULT_EMAIL_RECIPIENT=auditor@company.com

# Email Service Provider Options
# For SendGrid: EMAIL_SERVICE=sendgrid, SENDGRID_API_KEY=your-sendgrid-key
# For Mailgun: EMAIL_SERVICE=mailgun, MAILGUN_API_KEY=your-mailgun-key, MAILGUN_DOMAIN=your-domain
EMAIL_SERVICE=smtp # Options: smtp, sendgrid, mailgun